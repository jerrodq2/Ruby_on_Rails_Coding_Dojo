<h1>New User</h1>
<% if flash[:errors] %>
  <% flash[:errors].each do |i| %>
    <p><%= i %> </p>
  <% end %>
<% end %>
<%= form_for @user do |f| %>
  <%= f.label :name %>:
  <%= f.text_field :name %></br>

  <%= f.label :email %>:
  <%= f.text_field :email %></br>

  <%= f.label :password %>:
  <%= f.password_field :password %></br>

  <%= f.label :password_confirmation %>:
  <%= f.password_field :password_confirmation %></br>

  <%= f.submit %>
<% end %>

